<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="MergeRootFrame" >
    <LinearLayout

        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:orientation="vertical">
        <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical|right"
            android:paddingRight="15dp">
            <ImageButton
                android:id="@+id/refresh"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_menu_refresh" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="Last Updated: ">
            </TextView>
            <TextView
                android:id="@+id/updated_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="Not Yet">
            </TextView>

        </LinearLayout>


    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|top"
        >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textCoinBase"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="CoinBase"
                    android:textSize="24dp"
                    android:layout_gravity="center"
                 ></TextView>
                <TextView
                    android:id="@+id/textCoinBaseCur"
                    android:layout_height="wrap_content"
                    android:text="Loading..."
                    android:textSize="24dp"
                 ></TextView>

        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textBTC"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="BTC-e"
                android:textSize="24dp"
                android:layout_gravity="center"
                ></TextView>
            <TextView
                android:id="@+id/textBTCCur"
                android:layout_height="wrap_content"
                android:text="Loading..."
                android:textSize="24dp"
                ></TextView>

        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textMTGox"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Mt.Gox"
                android:textSize="24dp"
                android:layout_gravity="center"
                ></TextView>
            <TextView
                android:id="@+id/textMTGoxCur"
                android:layout_height="wrap_content"
                android:text="Loading..."
                android:textSize="24dp"
                ></TextView>

        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textKorbit"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Korbit"
                android:textSize="24dp"
                android:layout_gravity="center|top"
                ></TextView>
            <LinearLayout android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">
            <TextView
                android:id="@+id/textKorbitCur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading..."
                android:textSize="24dp"
                ></TextView>
            <TextView
                android:id="@+id/textKorbitCur2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18dp">
            </TextView>
            </LinearLayout>

        </TableRow>
    </TableLayout>
        <LinearLayout
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:id="@+id/linearLayout"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:layout_marginTop="200dp"
            >

        </LinearLayout>


    </LinearLayout>
    <WebView
        android:id="@+id/korbitView"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent" android:visibility="gone"></WebView>
</FrameLayout>
